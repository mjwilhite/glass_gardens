<article>
  <header>
    <h1><%= @event.name %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @event.description %>
  </p>
  <h3>Starts at</h3>
  <p>
    <%= @event.starts_at %>
  </p>
  <h3>Location</h3>
  <p>
    <%= @event.location %>
  </p>
  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>
</article>

<nav>
  <%= link_to("All Events", root_path) %>
  <%= link_to "Edit", edit_event_path(@event) %>
</nav>
