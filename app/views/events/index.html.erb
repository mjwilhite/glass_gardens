<h1><%= pluralize(@events.size, 'Event') %></h1>

	<% @events.each do |event| %>

	<article>
		<header>
			<h2><%= event.name %></h2>
		</header>
		<p>
			<%= truncate(event.description, length: 40, separator: ' ') %>
		</p>
		<table>
			<tr>
				<td><span><strong>Starts at: </strong></span><%= event.starts_at %> </td>
			</tr>
			<tr>
				<td><span><strong>Location: </strong></span><%= event.location %></td>
			</tr>
			<tr>
				<td><span><strong>Price: </strong></span><%= format_price(event) %></td>
			</tr>
		</table>
	</article>
	<% end %>
